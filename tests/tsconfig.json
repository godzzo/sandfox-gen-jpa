{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"*": ["../types/*"]
		},
		"target": "es2017",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"lib": ["es2017", "es7", "es6", "dom"],
		"declaration": true,
		"sourceMap": true,
		"typeRoots": [
			"../types",
			"../node_modules/@types"
		],
		"types": [
			"reflect-metadata",
			"jest"
		],
	}
}