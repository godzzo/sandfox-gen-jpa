			FilterHelper.fullLike(root, query, cb, fullText, "<%= column.lowerCamelName%>", filter.fullText_like)
			FilterHelper.equal(root, query, cb, predicates, "<%= column.lowerCamelName%>", filter.<%= column.lowerCamelName%>_equal)
		<%
